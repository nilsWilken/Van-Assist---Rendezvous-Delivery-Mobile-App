<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/buttonBackground"
        android:layout_width="@dimen/level_button_size"
        android:background="@drawable/close_button_background"
        android:elevation="2dp"
        android:layout_marginBottom="4dp"
        android:clipToPadding="false"
        android:layout_height="@dimen/level_button_size">

    <ImageView
            android:layout_centerInParent="true"
            android:id="@+id/buttonIcon"
            android:layout_width="@dimen/level_button_icon_size"
            android:layout_height="@dimen/level_button_icon_size"
            android:src="@drawable/ic_action_name"/>
</RelativeLayout>