<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/buttonBackground"
        android:layout_width="@dimen/level_button_size"
        android:layout_height="@dimen/level_button_size"
        android:background="@drawable/level_button_rounded"
        android:layout_gravity="center"
        android:elevation="2dp"
        android:clipToPadding="false"
        android:gravity="center">

    <TextView
            android:id="@+id/buttonText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/nearly_black"
            android:textSize="@dimen/level_button_text_size"
            android:text="1"
            android:gravity="center"/>
</RelativeLayout>