<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="4dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/parcelsize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="58dp"
            android:layout_marginTop="4dp"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:text="S"
            android:textSize="23sp"
            android:textStyle="bold"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/undo"
            android:layout_width="29dp"
            android:layout_height="26dp"
            android:src="@drawable/ic_undo_red_24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:clickable="false"
            />


        <ImageView
            android:id="@+id/reorder_parcel"
            android:layout_width="29dp"
            android:layout_height="26dp"
            app:srcCompat="@drawable/ic_reorder_black_24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="8dp"
            />


        <TextView
            android:id="@+id/nextdelivery_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="24dp"
            android:text="@string/delivery_address"
            android:textSize="15sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nextdelivery_label"
            android:layout_marginStart="40dp"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nextdelivery_label" />

        <TextView
            android:id="@+id/expand_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/address"
            android:layout_marginEnd="16dp"
            android:drawableEnd="@drawable/ic_keyboard_arrow_down_black_24dp"
            android:text=""
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/address" />

        <RelativeLayout
            android:id="@+id/details_on_expand"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/expand_icon"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/expand_icon">

            <TextView
                android:id="@+id/clientname_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="@string/recipient_name"
                android:textSize="15sp"
                />

            <TextView
                android:id="@+id/client_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/clientname_label"
                android:layout_marginStart="40dp"
                android:textSize="20sp"
                android:textStyle="bold"
                />


            <TextView
                android:id="@+id/additionalclient_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="50dp"
                android:layout_marginTop="16dp"
                android:layout_below="@+id/client_name"
                android:text="@string/additional_information"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/additionalclientaddress_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/additionalclient_label"
                android:layout_marginStart="40dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="40dp"
                android:text="Possible additional information about client or address"
                android:textAlignment="viewStart"
                android:textSize="15sp" />

            <Button
                android:id="@+id/imgPhone"
                android:layout_width="49dp"
                android:layout_height="30dp"
                android:layout_below="@+id/additionalclientaddress_info"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:layout_marginTop="15dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/custom_call_button_selector" />

            <TextView
                android:id="@+id/weightLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/additionalclientaddress_info"
                android:layout_toRightOf="@+id/parcelSizeContainer"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="20dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="2kg"
                />

            <android.support.constraint.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/parcelSizeContainer"
                android:layout_alignParentBottom="false"
                android:layout_below="@+id/additionalclientaddress_info"
                android:layout_marginEnd="40dp"
                android:layout_marginStart="40dp"
                >

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_dpd_box_black_slim" />

                <TextView
                    android:id="@+id/lenghtLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"

                    app:layout_constraintRight_toLeftOf="@+id/widthLabel"
                    android:layout_marginEnd="15dp"

                    android:layout_marginTop="47dp"
                    android:paddingBottom="10dp"
                    android:text="25"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:rotation="25"
                    />

                <TextView
                    android:id="@+id/widthLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="@id/imageView2"

                    app:layout_constraintLeft_toRightOf="@+id/lenghtLabel"
                    android:layout_marginStart="15dp"


                    android:layout_marginTop="47dp"
                    android:paddingBottom="10dp"
                    android:text="25"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:rotation="-25"
                    />

                <TextView
                    android:id="@+id/heightLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView2"
                    app:layout_constraintTop_toTopOf="@id/imageView2"
                    app:layout_constraintLeft_toRightOf="@+id/imageView2"
                    android:text="25"
                    android:textSize="14sp"
                    android:textStyle="bold" />


            </android.support.constraint.ConstraintLayout>

        </RelativeLayout>

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>